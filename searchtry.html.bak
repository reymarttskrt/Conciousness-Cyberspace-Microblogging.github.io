<!DOCTYPE html>
<html>

<head>
    
    <title>Tuto</title>
</head>


<body style=" background-color: rgb(47, 121, 231);">

    <style>
        #search {
            border-radius: 30px;
            border: 2px solid black;
        }

        #button {
            background-color: aqua;
            border: 0px solid black;
            height: 30px;
            border-radius: 30px;
            cursor: pointer;
        }
    </style>

    <input type="search" id="search" value="" onchange="ouvrirPage()">
    <input type="button" id="button" onclick="ouvrirPage()" value="Chercher">

    <script>
        function ouvrirPage() {
            var a = document.getElementById("search").value;

            if (a === "chat") {
                window.open("index1.php");
            }

            if (a === "chien") {
                window.open("/customizedalert.html");
            }

            if (a === "youtube") {
                window.open("https://www.youtube.com/");
            }


        }
    </script>


</body>

</html>